{
  "name": "vibe-workflow",
  "description": "Ship high-quality code faster with less back-and-forth",
  "version": "2.9.0",
  "author": {
    "name": "doodledood",
    "email": "aviram.kofman@gmail.com"
  },
  "homepage": "https://github.com/doodledood/claude-code-plugins",
  "repository": "https://github.com/doodledood/claude-code-plugins",
  "license": "MIT",
  "keywords": ["vibe-coding", "workflow", "autonomous", "quality-gates", "code-review", "maintainability", "planning", "implementation-plan"],
  "hooks": {
    "SessionStart": [
      {
        "description": "Inject session-start reminders for vibe-workflow best practices",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks session-start-reminder"
          }
        ]
      },
      {
        "matcher": "compact",
        "description": "Re-anchor session after compaction with reminders and implement workflow recovery",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks post-compact-hook"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "description": "Prevent premature stops during /implement and /implement-inplace workflows when todos are incomplete",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks stop-todo-enforcement"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "description": "Remind to update progress/log files after todo completion during implement workflows",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks post-todo-write-hook"
          }
        ]
      }
    ]
  }
}

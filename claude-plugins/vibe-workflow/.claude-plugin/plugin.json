  "keywords": ["vibe-coding", "workflow", "autonomous", "quality-gates", "code-review", "maintainability", "git", "rebase"],
  "hooks": {
    "SessionStart": [
      {
        "description": "Remind Claude to prefer codebase-researcher over built-in Explore agent for deep code understanding (questions, planning, debugging, onboarding)",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks session-start-reminder"
          }
        ]
      }
    ]
  }
}

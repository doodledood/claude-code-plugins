{
  "name": "vibe-experimental",
  "version": "0.16.0",
  "description": "Manifest-driven workflows separating Deliverables (what to build) from Invariants (rules to follow). Two-level verification: Global Invariants (task-level rules) and Acceptance Criteria (per-deliverable).",
  "keywords": [
    "experimental",
    "manifest",
    "define",
    "verification",
    "invariants",
    "deliverables",
    "acceptance-criteria",
    "autonomous",
    "do"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "description": "Prevent premature stops during /do workflow when verification incomplete",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks stop-do-hook"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Skill",
        "description": "Gate /escalate calls - require /verify before escalation",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks pretool-escalate-hook"
          }
        ]
      }
    ]
  }
}

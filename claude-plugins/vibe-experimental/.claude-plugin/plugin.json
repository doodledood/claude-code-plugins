{
  "name": "vibe-experimental",
  "version": "0.8.0",
  "description": "Experimental definition-driven workflows. Every criterion has explicit verification; execution can't stop without verification passing or proper escalation.",
  "keywords": [
    "experimental",
    "define",
    "verification",
    "acceptance-criteria",
    "autonomous",
    "do"
  ],
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "description": "Prevent premature stops during /do workflow when verification incomplete",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks stop-do-hook"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Skill",
        "description": "Gate /escalate calls - require /verify before escalation",
        "hooks": [
          {
            "type": "command",
            "command": "uvx --from ${CLAUDE_PLUGIN_ROOT}/hooks pretool-escalate-hook"
          }
        ]
      }
    ]
  }
}
